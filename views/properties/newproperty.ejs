
<h2>Create a new property</h2>

<form class="myproperty-view-element flex-col" action="/properties/create" method="POST" id="form-container" enctype="multipart/form-data">
  <div class="one-col flex-row">
    <label for="propertyname">Property Name</label>
    <input class="flex-item-grow" id="propertyname" type="text" name="propertyname" placeholder="New property">
  </div>  
  <h4>property location:</h4>
  <div class="one-col flex-row">
    <label for="enterAddress">Address</label>
    <input class="flex-item-grow" placeholder="Write and select address among dropdown, enter pressing tab key" name="address" onFocus="startAutocomplete()" id="locality" ><br>
  </div>
  <div class="one-col flex-row">
    <label for="streetCreate">Street</label>
    <input class="flex-item-grow" id="streetCreate" type="text" name="street" placeholder="Your street">
  </div>
  <div class="one-col flex-row">
    <label for="streetnrCreate">Number</label>
    <input class="flex-item-grow" id="streetnrCreate" type="number" name="streetnr" placeholder="Your street number">
  </div>  
  <div class="one-col flex-row">
    <label for="zipCreate">ZIP Code</label>
    <input class="flex-item-grow" id="zipCreate" type="text" name="zip" placeholder="Your zip code">
  </div>
  <div class="one-col flex-row">  
    <label for="cityCreate">City</label>
    <input class="flex-item-grow" id="cityCreate" type="text" name="city" placeholder="Barcelona">
  </div>
  <div class="one-col flex-row">  
    <label for="countryCreate">Country</label>
    <input class="flex-item-grow" id="countryCreate" type="text" name="country" placeholder="ES">
  </div>  
  <div class="hide one-col flex-row">
    <label class="hide">Geolocation</label>
    <input class="flex-item-grow hide" type="text" name="latitude" id="latitude" value="" placeholder="latitude" >
    <input class="flex-item-grow hide" type="text" name="longitude" id="longitude" value=""placeholder="longitude" >
  </div>
  <div class="one-col flex-row">  
    <input class="flex-item-grow" type="text" name="photo_name">
    <input class="flex-item-grow" type="file" name="photo">
  </div>  
<!-- To use optionally to store place_id into the Property model
<input type="text" name="place_id" id="location_id" placeholder="Location Ids" value="" ><br> -->

  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>

  <button  class="call-button" type="submit" value="Save">Submit</button>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAM3SVtttv2pqI2Z9vufnl63sE0eblMRnM&libraries=places"></script>
<script type="text/javascript" src="/javascripts/autocomplete-address.js"></script>