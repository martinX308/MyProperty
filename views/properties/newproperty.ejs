
<h2>Create a new property</h2>

<form action="/properties/create" method="POST" id="form-container">
  <label for="propertyname">Property Name</label>
  <input id="propertyname" type="text" name="propertyname" placeholder="new property">
  <p>property location:</p>
  <label for="streetCreate">Street</label>
  <input id="streetCreate" type="text" name="street" placeholder="your street">
  <label for="streetnrCreate">Number</label>
  <input id="streetnrCreate" type="number" name="streetnr" placeholder="your street number">
  <label for="zipCreate">ZIP Code</label>
  <input id="zipCreate" type="text" name="zip" placeholder="your zip code">
  <label for="cityCreate">City</label>
  <input id="cityCreate" type="text" name="city" placeholder="Barcelona">
  <label for="countryCreate">Country</label>
  <input id="countryCreate" type="text" name="country" placeholder="ES">

<br><br>

  <label>Geolocation</label>
  <input type="text" name="latitude" placeholder="Latitude" >
  <input type="text" name="longitude" placeholder="Longitude">

<br><br>

<input placeholder="Enter Area name to populate Latitude and Longitude" name="address" onFocus="startAutocomplete()" id="locality" ><br>
<input type="text" name="city" id="city" placeholder="City" value="" ><br>
<input type="text" name="latitude" id="latitude" placeholder="Latitude" value="" ><br>
<input type="text" name="longitude" id="longitude" placeholder="Longitude" value="" ><br>
<input type="text" name="place_id" id="location_id" placeholder="Location Ids" value="" ><br>

<br><br>


  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>

  <button>Submit</button>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAM3SVtttv2pqI2Z9vufnl63sE0eblMRnM&libraries=places"></script>
<script type="text/javascript" src="/javascripts/autocomplete-address.js"></script>